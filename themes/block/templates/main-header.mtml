      <mt:If name="headerlogo">
          <a href="<$mt:SiteURL$>" class="header__title-sp"><img src="<mt:var name="headerlogo">" alt="<$mt:SiteName$>"></a>
      <mt:Else>
          <span class="header__title__text"><a href="<$mt:SiteURL$>" class="header__title-sp"><$mt:SiteName$></a></span>
      </mt:If>
  </h1>
  <a class="menu">
    <span class="menu__line menu__line--top"></span>
    <span class="menu__line menu__line--center"></span>
    <span class="menu__line menu__line--bottom"></span>
  </a>
  <nav class="gnav">
    <div class="gnav__wrap">
      <ul class="header__navi">
        <li><a href="<$mt:SiteRelativeURL$>news.html">ニュース</a></li>
      <mt:Contents content_type="ウェブページ" limit="999">
      <mt:ContentField content_field="ナビの表示位置"><mt:If tag="ContentFieldValue" eq="hf">
      <mt:ContentField content_field="ページタイトル"><li><a href="<mt:ContentPermalink>"><mt:ContentFieldValue></a></li></mt:ContentField>
      </mt:If></mt:ContentField>
      </mt:Contents>

      </ul>
    </div>
  </nav>
  </div>
</header>
